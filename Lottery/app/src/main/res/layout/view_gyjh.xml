<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bet_bg_color"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_gyjh_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top_item_name"
                    style="@style/tv_title_style"
                    android:text="@string/pk10gyjh_gyjh" />

                <com.international.wtw.lottery.base.view.CustomGridView
                    android:id="@+id/gyjz_gv_gyjzh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:verticalSpacing="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_gyjh_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top_item_name"
                    style="@style/tv_title_style"
                    android:text="@string/pk10gyjh_gyjh" />

                <com.international.wtw.lottery.base.view.CustomGridView
                    android:id="@+id/gyjz_gv_gyjzh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:horizontalSpacing="10dp"
                    android:numColumns="4"
                    android:verticalSpacing="5dp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>