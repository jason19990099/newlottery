<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/mine_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_6"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mine_out_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView18"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dimen_5"
                android:padding="5dp"
                android:text="退出"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/mine_head" />

        <TextView
            android:id="@+id/mine_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="您好！"
            android:textColor="#ffffff" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:text="余额：Y 0.00元"
            android:textColor="#ffffff" />


        <TextView
            android:textColor="#ffffff"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/mine_money"
            android:drawablePadding="20dip"
            android:gravity="center_vertical"
            android:paddingLeft="40dip"
            android:text="红包查询" />

    </LinearLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/mine_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="#F2F2F2"
        android:horizontalSpacing="@dimen/dimen_1"
        android:numColumns="3"
        android:verticalSpacing="@dimen/dimen_1" />

</LinearLayout>