<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bet_bg_color"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top_item_name"
                    style="@style/tv_title_style"
                    android:text="总和、龙虎" />

                <com.international.wtw.lottery.base.view.CustomGridView
                    android:id="@+id/gridViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:divider="#00000000"
                    android:horizontalSpacing="8dp"
                    android:numColumns="4"
                    android:verticalSpacing="8dp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第一球"/>

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第二球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第三球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第四球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第五球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_six"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第六球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_seven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第七球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_eight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_item_name"
                        style="@style/tv_title_style"
                        android:layout_gravity="center_horizontal"
                        android:text="第八球" />

                    <com.international.wtw.lottery.base.view.CustomListView
                        android:id="@+id/listViewItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:divider="#00000000"
                        android:dividerHeight="8dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>