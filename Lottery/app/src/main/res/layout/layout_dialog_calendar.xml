<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/dimen_20"
    android:layout_marginStart="@dimen/dimen_20"
    android:background="@drawable/shape_color_white_corners_4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/shape_color_primary_top_corners_6dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="11月17号 周五"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:mcv_dateTextAppearance="@style/calendarDateTextAppearance"
        app:mcv_headerTextAppearance="@style/calendarTitleTextAppearance"
        app:mcv_leftArrowMask="@drawable/ic_arrow_left_grey"
        app:mcv_rightArrowMask="@drawable/ic_arrow_right_grey"
        app:mcv_selectionColor="@color/color_primary"
        app:mcv_showOtherDates="all"
        app:mcv_tileHeight="33dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_dark"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="@color/text_dark"/>

    </LinearLayout>
</LinearLayout>