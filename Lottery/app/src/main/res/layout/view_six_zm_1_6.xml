<?xml version="1.0" encoding="utf-8"?><!--正码1-6  过关-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bet_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ly_zm_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_zm_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"
                    android:text="" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_zm_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15">

            <LinearLayout
                android:id="@+id/ly_zm_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_zm_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_zm_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>