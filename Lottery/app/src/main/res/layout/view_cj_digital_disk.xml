<?xml version="1.0" encoding="utf-8"?><!-- a bin-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bet_bg_color"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ly_number_one"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"/>

                <com.international.wtw.lottery.base.view.CustomListView
                    android:id="@+id/listViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_number_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"/>

                <com.international.wtw.lottery.base.view.CustomListView
                    android:id="@+id/listViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_number_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"/>

                <com.international.wtw.lottery.base.view.CustomListView
                    android:id="@+id/listViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_number_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"/>

                <com.international.wtw.lottery.base.view.CustomListView
                    android:id="@+id/listViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/dimen_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_number_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ball_name"
                    style="@style/tv_title_style"/>

                <com.international.wtw.lottery.base.view.CustomListView
                    android:id="@+id/listViewItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/dimen_5" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>